template element TextArea(MyTemplates/TextMakeStart)
{
    font_name MakeStart
		metrics_mode pixels
		char_height 60
		colour 0.0 0.0 0.0 0.3
}
template element TextArea(MyTemplates/TextMakeStartS)
{
    font_name MakeStart
		metrics_mode pixels
		char_height 60
		colour 0.0 0.0 0.0   
}

MakeSplash
{
    zorder 0

    container Panel(splashPanel) 
    {
	      metrics_mode pixels
        left 0
        top 0
        width 1920
        height 1080
        vert_align top
        horz_align left
        material makesplashmat
		    element TextArea(pressstartLabel) : MyTemplates/TextMakeStart
		    {
				  top 0
				  left 0
				  alignment center
				  vert_align center
				  horz_align center
		    }
		    element TextArea(pressstartLabelS) : MyTemplates/TextMakeStartS
		    {
				  top -6
				  left -6
				  alignment center
				  vert_align center
				  horz_align center
		    }
    }	  

}